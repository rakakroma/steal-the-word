{
  "name": "HooliRubi",
  "version": "0.0.1",
  "description": "To annotate html ruby, notes and save data on vocabularies, which can be shown any website you visit.",
  "permissions": ["storage", 
  "tabs", 
   "activeTab",
    "background"	,
     "scripting"],
  "host_permissions": ["https://*.youtube.com/*"],
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "HooliRubi",
    "default_popup": "popup.html"
  },
  "author": "rakakroma",
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"


}