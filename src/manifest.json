{
  "manifest_version": 3,
  "name": "Steal The Word",
  "author": "rakakroma",
  "version": "0.0.1",
  "description": "To annotate, save words and contexts from web pages.",
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "background",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ðŸ’«HooliRuby",
    "default_icon": "icon-48.png"
  },
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "contentScript.bundle.js"
      ],
      "css": [
        "content.styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "icon-128.png",
        "icon-48.png",
        "flame-welcome.png",
        "transparent-thief.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}